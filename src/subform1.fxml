<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<GridPane prefHeight="400.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.echomap.kqf.two.gui.KQFSubCtrl">
	<columnConstraints>
		<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
	</columnConstraints>
	<rowConstraints>
		<RowConstraints valignment="CENTER" vgrow="SOMETIMES" />
		<RowConstraints vgrow="ALWAYS" />
		<RowConstraints vgrow="SOMETIMES" />
		<RowConstraints vgrow="SOMETIMES" />
		<RowConstraints minHeight="200.0" vgrow="ALWAYS" />
	</rowConstraints>
	<children>

		<Label style="-fx-border-color: #8b2e62; -fx-border-width: 2px; -fx-border-insets: 6; -fx-border-style: solid; -fx-background-color: aqua; -fx-background-insets: 4;" text="Additional DocTag Sorting Files:" />
		<HBox GridPane.rowIndex="1">
			<children>
				<HBox style="-fx-border-color: black;">
					<children>
						<Label minWidth="50.0" text="Name:" />
						<TextField fx:id="inputName" />
					</children>
               <padding>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </padding>
				</HBox>
				<HBox style="-fx-border-color: black;" HBox.hgrow="ALWAYS">
					<children>
						<Label minWidth="50.0" text="File:" />
						<TextField fx:id="inputFile" HBox.hgrow="ALWAYS" />
						<Button minWidth="75.0" mnemonicParsing="false" onAction="#handleBrowse" text="Browse" />
					</children>
               <padding>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </padding>
				</HBox>
			</children>
		</HBox>
		<VBox spacing="10.0" style="-fx-border-color: black;" GridPane.rowIndex="2">
			<children>
				<Label text="DocTags">
					<HBox.margin>
						<Insets />
					</HBox.margin>
				</Label>
				<TextArea fx:id="inputDocTags" minHeight="150.0" />
			</children>
		</VBox>
		<HBox alignment="CENTER" spacing="20.0" style="-fx-background-color: gray;" GridPane.rowIndex="3">
			<children>
            <Button onAction="#handleNew" text="_New" />
				<Button fx:id="buttonAddEdit" onAction="#handleAddEdit" text="_Add/Edit" />
            <Button fx:id="buttonDelete" mnemonicParsing="false" onAction="#handleDelete" text="Delete" />
            <Separator orientation="VERTICAL" />
            <Button fx:id="buttonSave" onAction="#handleSave" text="_Save Data" />
            <Button fx:id="buttonExport" onAction="#handleExport" text="_Export" />
            <Button fx:id="buttonImport" onAction="#handleImport" text="_Import" />
				<Button cancelButton="true" defaultButton="true" onAction="#handleClose" text="_Close" />
			</children>
		</HBox>
		<ScrollPane fitToHeight="true" fitToWidth="true" GridPane.hgrow="SOMETIMES" GridPane.rowIndex="4" GridPane.vgrow="SOMETIMES">
         <content>
                           <GridPane>
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
               <children>
            				<TableView fx:id="inputTable" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
  
                  
               </children>
            </GridPane>
         </content>
		</ScrollPane>
	</children>
</GridPane>
